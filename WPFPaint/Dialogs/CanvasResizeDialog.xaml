<Window x:Class="WPFPaint.Dialogs.CanvasResizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение размера холста" Height="200" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Укажите новый размер холста (в пикселях):" 
                   Margin="0,0,0,10" FontWeight="SemiBold"/>
        
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ширина:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="WidthBox" Margin="0,0,0,5" 
                 VerticalContentAlignment="Center" Height="25"/>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Высота:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="HeightBox" Margin="0,0,0,5"
                 VerticalContentAlignment="Center" Height="25"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ОК" Width="80" Height="28" Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="80" Height="28" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
